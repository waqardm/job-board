<%- include('../inc/header') %>

    <section>
        <div class="columns is-mobile">
            <div class="column is-three-quarters p-l-75 p-r-20">
                <div>
                    <h1 class="title is-1 index-h1">👋 <%= user.firstName %> </h1>
                    <p class="subtitle is-4 m-t-50">
                            🗄 Track your saved and applied jobs below.
                    </p>
                </div> <!-- intro-->

                <div class="m-t-50"></div>

                <div class="field is-horizontal listing">
                    <div class="field-label is-medium">
                        <label class="label">Search</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                        <div class="control">
                            <input class="input is-medium is-three-quarters" type="text" placeholder="Search results by location, role, or stack">
                        </div>
                        </div>
                    </div>
                </div>


                <div class="tabs is-toggle is-centered m-t-30">
                    <ul>
                        <li class="is-active" id="tab1-tab">
                            <a>
                                <span>❤️ Saved</span>
                            </a>
                        </li>
                        <li id="tab2-tab">
                            <a >
                                <span>📝 Applied</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div id="tab2-div">
                    <%- include('../inc/candidate/saved') %>
                </div>
                <div id="tab2-div">
                    <%- include('../inc/candidate/applied') %>
                </div>

            </div> <!-- first column-->

            <%- include('../inc/candidate-sidebar') %>

        </div> <!--main columns-->
    </section><!-- main body-->
</main>
<%- include('../inc/footer') %>
<%- include('../inc/header') %>

    <section>
        <div class="columns is-mobile">
            <div class="column is-three-quarters p-l-75 p-r-20">
                <div>
                    <h1 class="title is-1 index-h1">👋 <%= user.firstName %> </h1>
                    <p class="subtitle is-4 m-t-50">
                            🗄 Track your saved and applied jobs below.
                    </p>
                </div> <!-- intro-->

                <div class="m-t-50"></div>

                <div class="field is-horizontal listing">
                    <div class="field-label is-medium">
                        <label class="label">Search</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                        <div class="control">
                            <input class="input is-medium is-three-quarters" type="text" placeholder="Search results by location, role, or stack">
                        </div>
                        </div>
                    </div>
                </div>


                <div class="tabs is-toggle is-centered m-t-30">
                    <ul>
                        <li class="is-active">
                            <a>
                                <span>❤️ Saved</span>
                            </a>
                        </li>
                        <li>
                            <a>
                                <span>📝 Applied</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="listing">
                    <article class="media p-t-10 p-l-10">
                        <figure class="media-left">
                            <p class="image is-75x75">
                                <img src="https://bulma.io/images/placeholders/128x128.png">
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <strong class="is-size-4"> 💼 Company Name</strong>
                                    <span class="m-l-10 is-size-4">🗺</span>Location
                                    <span class="m-l-10 is-size-4">💵</span> $30,000
                                    <br>
                                    <span class="is-size-4">👩‍💻👨‍💻</span> Javascript Developer<br>
                            </div>
                            <p class="is-pulled-left button is-text">Details</p>
                            <nav class="level is-mobile is-pulled-right">
                                <div class="level-left">
                                    <a class="level-item button is-danger"><i class="fas fa-heart m-r-5"></i>Save</a>
                                    <a class="level-item button"><i class="fas fa-pen m-r-5"></i>Applied</a>
                                    <a class="level-item">
                                        <span class="icon is-small"></i></span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </article>
                </div><!-- job listing-->

                <div class="listing">
                    <article class="media p-t-10 p-l-10">
                        <figure class="media-left">
                            <p class="image is-75x75">
                                <img src="https://bulma.io/images/placeholders/128x128.png">
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <p class="is-size-5">
                                    <strong class="is-size-4"> 💼 Company Name</strong>
                                    <span class="m-l-10 is-size-4">🗺</span>Location
                                    <span class="m-l-10 is-size-4">💵</span> $30,000
                                    <br>
                                    <span class="is-size-4">👩‍💻👨‍💻</span> Javascript Developer<br>
                                </p>
                            </div>
                            <p class="is-pulled-left button is-text">Details</p>
                            <nav class="level is-mobile is-pulled-right">
                                <div class="level-left">
                                    <a class="level-item button is-danger"><i class="fas fa-heart m-r-5"></i>Saved</a>
                                    <a class="level-item button is-success"><i class="fas fa-pen m-r-5"></i>Apply</a>
                                    <a class="level-item">
                                        <span class="icon is-small"></i></span>
                                    </a>
                                </div>
                            </nav>
                        </div>
                    </article>
                </div><!-- job listing-->
                
            </div> <!-- first column-->

            <%- include('../inc/candidate-sidebar') %>

        </div> <!--main columns-->
    </section><!-- main body-->
</main>
<%- include('../inc/footer') %>